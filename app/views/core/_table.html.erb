<tr>
  <td><%= item["title"] %></td> 
  <td><%= item["episode_id"] %></td> 
  <td><%= item["director"] %></td> 
  <td class="text-center"><%= item["release_date"].to_date.strftime("%Y") %></td> 
  <td class="text-center"> 
    <% if @likes.include? item["episode_id"] %>
        <%= render partial: 'like/unlike', locals: { id: item["episode_id"]} %>      
    <% else %>        
        <%= render partial: 'like/like', locals: { id: item["episode_id"]} %>
    <% end %>
  </td>
</tr>

